{
  "name": "whatsapp-bot",
  "env": [
    {
      "key": "NODE_ENV",
      "value": "production"
    },
    {
      "key": "KOYEB",
      "value": "true"
    },
    {
      "key": "PORT",
      "value": "3000"
    }
  ],
  "docker": {
    "image": "node:18-alpine"
  },
  "resources": {
    "memory": 1024,
    "cpu": 1000
  },
  "ports": [
    {
      "port": 3000,
      "protocol": "http"
    }
  ],
  "routes": [
    {
      "path": "/",
      "port": 3000
    }
  ],
  "scaling": {
    "min": 1,
    "max": 1
  }
}
