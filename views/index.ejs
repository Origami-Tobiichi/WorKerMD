<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= bot_name %> - WhatsApp Bot</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #667eea;
            --secondary: #764ba2;
            --success: #10B981;
            --warning: #F59E0B;
            --error: #EF4444;
            --dark: #1F2937;
            --light: #F9FAFB;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            min-height: 100vh;
            padding: 20px;
            color: var(--dark);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            padding: 20px;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .header p {
            font-size: 1.1rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
        }

        .dashboard {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        @media (max-width: 768px) {
            .dashboard {
                grid-template-columns: 1fr;
            }
        }

        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .status-card {
            text-align: center;
        }

        .status-header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .status-indicator {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: bold;
            margin: 10px 0;
            background: var(--light);
        }

        .status-online { background: var(--success); color: white; }
        .status-offline { background: var(--error); color: white; }
        .status-connecting { background: var(--warning); color: white; }
        .status-initializing { background: var(--dark); color: white; }

        .connection-info {
            background: var(--light);
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }

        .info-item {
            text-align: center;
            padding: 15px;
            background: var(--light);
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .info-item:hover {
            background: #E5E7EB;
            transform: scale(1.02);
        }

        .info-label {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .info-value {
            font-size: 1.1rem;
            font-weight: bold;
            color: var(--dark);
        }

        .qr-container {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .qr-code {
            max-width: 280px;
            margin: 0 auto;
            border: 10px solid white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .pairing-section {
            background: var(--warning);
            color: white;
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
            text-align: center;
        }

        .pairing-code {
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 3px;
            margin: 10px 0;
        }

        .phone-number {
            background: var(--primary);
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            margin: 10px 0;
            display: inline-block;
        }

        .bot-info {
            margin-top: 20px;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .feature-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: var(--primary);
        }

        .footer {
            text-align: center;
            color: white;
            margin-top: 50px;
            opacity: 0.8;
            padding: 20px;
        }

        .btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            margin: 10px 5px;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn:hover {
            background: #5a6fd8;
            transform: translateY(-2px);
        }

        .btn-success { background: var(--success); }
        .btn-warning { background: var(--warning); }
        .btn-error { background: var(--error); }

        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #ffffff;
            border-radius: 50%;
            border-top-color: transparent;
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }

        .stat-item {
            background: var(--light);
            padding: 15px;
            border-radius: 8px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fab fa-whatsapp"></i> <%= bot_name %></h1>
            <p><%= description %></p>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="info-label">Version</div>
                    <div class="info-value">v<%= version %></div>
                </div>
                <div class="stat-item">
                    <div class="info-label">Author</div>
                    <div class="info-value"><%= author %></div>
                </div>
                <div class="stat-item">
                    <div class="info-label">Uptime</div>
                    <div class="info-value" id="uptime"><%= Math.floor(uptime) %>s</div>
                </div>
            </div>
        </div>

        <div class="dashboard">
            <div class="card status-card">
                <div class="status-header">
                    <i class="fas fa-robot fa-2x"></i>
                    <h2>Bot Status & Controls</h2>
                </div>
                
                <div class="status-indicator status-<%= connectionStatus %>" id="statusIndicator">
                    <i class="fas fa-circle"></i>
                    <span id="statusText"><%= botStatus %></span>
                </div>

                <div class="connection-info">
                    <div class="info-label">Connection Status</div>
                    <div class="info-value" id="connectionStatus"><%= connectionStatus %></div>
                </div>

                <% if (phoneNumber) { %>
                <div class="phone-number">
                    <i class="fas fa-phone"></i> Connected to: <%= phoneNumber %>
                </div>
                <% } %>

                <% if (pairingCode) { %>
                <div class="pairing-section">
                    <i class="fas fa-key"></i>
                    <div class="info-label">Pairing Code</div>
                    <div class="pairing-code"><%= pairingCode %></div>
                    <div class="info-label">Expires in 15 seconds</div>
                </div>
                <% } %>

                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Platform</div>
                        <div class="info-value">WhatsApp Web</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Multi-Device</div>
                        <div class="info-value">‚úÖ Enabled</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Library</div>
                        <div class="info-value">Baileys MD</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Node.js</div>
                        <div class="info-value" id="nodeVersion">Loading...</div>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <button class="btn btn-success" onclick="refreshStatus()">
                        <i class="fas fa-sync-alt"></i> Refresh Status
                    </button>
                    <button class="btn btn-warning" onclick="restartBot()">
                        <i class="fas fa-redo"></i> Restart Bot
                    </button>
                </div>
            </div>

            <div class="card qr-container">
                <h2><i class="fas fa-qrcode"></i> QR Code Authentication</h2>
                <% if (qrCode) { %>
                    <img src="/qr" alt="QR Code" class="qr-code" id="qrImage">
                    <p>Scan this QR code with WhatsApp to connect</p>
                    <div class="info-label">QR Code will auto-refresh</div>
                <% } else { %>
                    <div style="padding: 50px; color: #666; text-align: center;">
                        <i class="fas fa-qrcode fa-4x" style="margin-bottom: 20px; opacity: 0.5;"></i>
                        <p>QR code will appear here when authentication is required</p>
                        <p>Current Status: <strong><%= botStatus %></strong></p>
                    </div>
                <% } %>
                
                <% if (botInfo) { %>
                <div class="bot-info">
                    <h3><i class="fas fa-info-circle"></i> Bot Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Bot ID</div>
                            <div class="info-value"><%= botInfo.id %></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Bot Name</div>
                            <div class="info-value"><%= botInfo.name %></div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="features">
            <div class="feature-card">
                <div class="feature-icon">ü§ñ</div>
                <h3>Multi-Device Ready</h3>
                <p>Supports multiple device connections using Baileys MD library</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">‚ö°</div>
                <h3>High Performance</h3>
                <p>Optimized for speed and reliability with advanced features</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üîí</div>
                <h3>Secure Authentication</h3>
                <p>Secure QR code and pairing code authentication methods</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">üåê</div>
                <h3>Web Dashboard</h3>
                <p>Real-time monitoring and control via web interface</p>
            </div>
        </div>

        <div class="footer">
            <p>¬© 2024 <%= bot_name %> - Built with Node.js & Baileys MD</p>
            <p>Created by <%= author %> | Deployed on Koyeb/Vercel</p>
            <p style="margin-top: 10px;">
                <a href="https://github.com/nazedev/hitori" style="color: white; text-decoration: none;">
                    <i class="fab fa-github"></i> GitHub Repository
                </a>
            </p>
        </div>
    </div>

    <script>
        // Auto-refresh status every 5 seconds
        setInterval(refreshStatus, 5000);
        
        // Update uptime every second
        setInterval(updateUptime, 1000);

        function refreshStatus() {
            fetch('/api/status')
                .then(response => response.json())
                .then(data => {
                    updateDisplay(data);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('statusText').textContent = 'Error fetching status';
                    document.getElementById('statusIndicator').className = 'status-indicator status-offline';
                });
        }

        function updateDisplay(data) {
            // Update status indicator
            const statusIndicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');
            const connectionStatus = document.getElementById('connectionStatus');
            
            statusText.textContent = data.status;
            connectionStatus.textContent = data.connection_status;
            
            // Update status class
            statusIndicator.className = `status-indicator status-${data.connection_status}`;
            
            // Update QR code display if needed
            if (data.has_qr && !document.getElementById('qrImage')) {
                location.reload();
            }
            
            // Update pairing code if available
            if (data.pairing_code) {
                if (!document.querySelector('.pairing-section')) {
                    location.reload();
                }
            }
        }

        function updateUptime() {
            const uptimeElement = document.getElementById('uptime');
            if (uptimeElement) {
                let currentUptime = parseInt(uptimeElement.textContent);
                uptimeElement.textContent = (currentUptime + 1) + 's';
            }
        }

        function restartBot() {
            if (confirm('Are you sure you want to restart the bot?')) {
                fetch('/api/restart')
                    .then(response => response.json())
                    .then(data => {
                        alert(data.message || 'Restart command sent');
                        setTimeout(refreshStatus, 2000);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error sending restart command');
                    });
            }
        }

        // Initialize node version
        document.getElementById('nodeVersion').textContent = process.versions.node || 'Unknown';

        // Initial status update
        document.addEventListener('DOMContentLoaded', function() {
            refreshStatus();
            updateUptime();
        });
    </script>
</body>
</html>
