<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= packageInfo.name %> - WhatsApp Bot</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 900px;
            width: 100%;
            text-align: center;
        }

        .header {
            margin-bottom: 30px;
        }

        .bot-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
            color: white;
        }

        h1 {
            color: #333;
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .version {
            color: #666;
            font-size: 1.1em;
            margin-bottom: 20px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .info-card {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            text-align: left;
        }

        .info-card h3 {
            color: #667eea;
            margin-bottom: 10px;
            font-size: 1.1em;
        }

        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .online {
            background: #4CAF50;
        }

        .offline {
            background: #f44336;
        }

        .connecting {
            background: #ff9800;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .actions {
            margin-top: 30px;
        }

        .btn {
            display: inline-block;
            padding: 12px 30px;
            margin: 0 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            font-weight: 600;
            border: none;
            cursor: pointer;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .btn-secondary {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .btn-success {
            background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
        }

        .pairing-section {
            margin-top: 30px;
            padding: 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e1e1e1;
            border-radius: 10px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
        }

        .pairing-code-display {
            background: #f8f9fa;
            border: 2px dashed #667eea;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            display: none;
        }

        .pairing-code {
            font-size: 2.5em;
            font-weight: bold;
            color: #667eea;
            letter-spacing: 5px;
            margin: 15px 0;
        }

        .countdown {
            font-size: 1.1em;
            color: #666;
            margin-bottom: 10px;
        }

        .status-message {
            padding: 15px;
            border-radius: 10px;
            margin: 15px 0;
            display: none;
        }

        .status-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .status-error {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .status-info {
            background: #cce7ff;
            color: #004085;
            border: 1px solid #b3d7ff;
        }

        .connection-status {
            font-size: 1.2em;
            font-weight: 600;
            margin: 20px 0;
        }

        .uptime {
            font-size: 1.2em;
            font-weight: 600;
            color: #4CAF50;
            margin: 20px 0;
        }

        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }
            
            h1 {
                font-size: 2em;
            }
            
            .btn {
                display: block;
                margin: 10px 0;
            }
            
            .pairing-code {
                font-size: 2em;
                letter-spacing: 3px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="bot-icon">
                ü§ñ
            </div>
            <h1><%= packageInfo.name %></h1>
            <div class="version">v<%= packageInfo.version %></div>
            <div class="connection-status" id="connectionStatus">
                <span class="status-indicator connecting"></span>
                Checking connection...
            </div>
            <div class="uptime" id="uptime">Loading uptime...</div>
        </div>

        <div class="info-grid">
            <div class="info-card">
                <h3>üìù Description</h3>
                <p><%= packageInfo.description %></p>
            </div>
            
            <div class="info-card">
                <h3>üë®‚Äçüíª Author</h3>
                <p><%= packageInfo.author %></p>
            </div>
            
            <div class="info-card">
                <h3>üõ† Technology</h3>
                <p>WhatsApp Bot Using Baileys Multi Device</p>
            </div>
            
            <div class="info-card">
                <h3>üîó Connection</h3>
                <p>Pairing Code Authentication</p>
            </div>
        </div>

        <!-- Pairing Code Section -->
        <div class="pairing-section">
            <h3>üîê WhatsApp Pairing Code</h3>
            <p>Enter your WhatsApp number to get a pairing code</p>
            
            <div class="form-group">
                <label for="phoneNumber">WhatsApp Number (with country code):</label>
                <input type="text" id="phoneNumber" placeholder="Example: 6281234567890" value="<%= typeof number_bot !== 'undefined' ? number_bot : '' %>">
                <small style="color: #666;">Format: Country code + number (without + or spaces)</small>
            </div>

            <button class="btn btn-success" onclick="requestPairingCode()">Get Pairing Code</button>

            <div class="pairing-code-display" id="pairingCodeDisplay">
                <h4>Your Pairing Code:</h4>
                <div class="pairing-code" id="pairingCode"></div>
                <div class="countdown" id="countdown">Expires in 15 seconds</div>
                <p>Enter this code in your WhatsApp > Linked Devices > Link a Device</p>
            </div>

            <div class="status-message" id="statusMessage"></div>
        </div>

        <div class="actions">
            <a href="https://github.com/nazedev/hitori" class="btn" target="_blank">üìÇ GitHub</a>
            <button class="btn btn-secondary" onclick="restartBot()">üîÑ Restart Bot</button>
            <button class="btn" onclick="checkConnection()">üîÑ Check Connection</button>
        </div>
    </div>

    <script>
        let countdownInterval;
        let pairingCodeExpiry;

        // Update uptime setiap 5 detik
        function updateUptime() {
            fetch('/')
                .then(response => response.json())
                .then(data => {
                    if (data.uptime) {
                        document.getElementById('uptime').textContent = `Uptime: ${data.uptime}`;
                    }
                    updateConnectionStatus(data.error ? 'offline' : 'online');
                })
                .catch(error => {
                    console.error('Error fetching uptime:', error);
                    updateConnectionStatus('error');
                });
        }

        function updateConnectionStatus(status) {
            const statusElement = document.getElementById('connectionStatus');
            const indicator = statusElement.querySelector('.status-indicator');
            
            indicator.className = 'status-indicator';
            
            switch(status) {
                case 'online':
                    indicator.classList.add('online');
                    statusElement.innerHTML = '<span class="status-indicator online"></span> Bot is Online and Connected';
                    break;
                case 'offline':
                    indicator.classList.add('offline');
                    statusElement.innerHTML = '<span class="status-indicator offline"></span> Bot is Offline';
                    break;
                case 'connecting':
                    indicator.classList.add('connecting');
                    statusElement.innerHTML = '<span class="status-indicator connecting"></span> Connecting...';
                    break;
                default:
                    indicator.classList.add('offline');
                    statusElement.innerHTML = '<span class="status-indicator offline"></span> Connection Error';
            }
        }

        function showStatusMessage(message, type) {
            const statusElement = document.getElementById('statusMessage');
            statusElement.textContent = message;
            statusElement.className = 'status-message';
            statusElement.classList.add(`status-${type}`);
            statusElement.style.display = 'block';
            
            setTimeout(() => {
                statusElement.style.display = 'none';
            }, 5000);
        }

        function requestPairingCode() {
            const phoneNumber = document.getElementById('phoneNumber').value.trim();
            
            if (!phoneNumber) {
                showStatusMessage('Please enter your WhatsApp number', 'error');
                return;
            }

            if (!/^\d+$/.test(phoneNumber) || phoneNumber.length < 6) {
                showStatusMessage('Please enter a valid WhatsApp number (digits only, with country code)', 'error');
                return;
            }

            showStatusMessage('Requesting pairing code...', 'info');
            updateConnectionStatus('connecting');

            // Kirim nomor ke server dan minta pairing code
            fetch(`/process?send=pairing:${phoneNumber}`)
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'Send') {
                        showStatusMessage('Pairing code requested successfully. Waiting for code...', 'success');
                        // Polling untuk mendapatkan pairing code
                        pollForPairingCode();
                    } else {
                        showStatusMessage('Failed to request pairing code', 'error');
                        updateConnectionStatus('offline');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showStatusMessage('Error requesting pairing code', 'error');
                    updateConnectionStatus('error');
                });
        }

        function pollForPairingCode() {
            let attempts = 0;
            const maxAttempts = 30; // 30 detik timeout
            
            const poll = setInterval(() => {
                fetch('/pairing-status')
                    .then(response => response.json())
                    .then(data => {
                        if (data.pairingCode) {
                            clearInterval(poll);
                            displayPairingCode(data.pairingCode);
                        } else if (data.error) {
                            showStatusMessage(data.error, 'error');
                            clearInterval(poll);
                        }
                        
                        attempts++;
                        if (attempts >= maxAttempts) {
                            clearInterval(poll);
                            showStatusMessage('Timeout waiting for pairing code', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Polling error:', error);
                        attempts++;
                        if (attempts >= maxAttempts) {
                            clearInterval(poll);
                            showStatusMessage('Error checking pairing status', 'error');
                        }
                    });
            }, 1000);
        }

        function displayPairingCode(code) {
            const displayElement = document.getElementById('pairingCodeDisplay');
            const codeElement = document.getElementById('pairingCode');
            const countdownElement = document.getElementById('countdown');
            
            codeElement.textContent = code;
            displayElement.style.display = 'block';
            
            // Set countdown timer (15 detik)
            pairingCodeExpiry = Date.now() + 15000;
            updateCountdown();
            
            countdownInterval = setInterval(updateCountdown, 1000);
            
            showStatusMessage('Pairing code generated! Enter it in WhatsApp within 15 seconds.', 'success');
            updateConnectionStatus('connecting');
        }

        function updateCountdown() {
            const now = Date.now();
            const remaining = Math.max(0, pairingCodeExpiry - now);
            const seconds = Math.ceil(remaining / 1000);
            
            const countdownElement = document.getElementById('countdown');
            countdownElement.textContent = `Expires in ${seconds} seconds`;
            
            if (remaining <= 0) {
                clearInterval(countdownInterval);
                document.getElementById('pairingCodeDisplay').style.display = 'none';
                showStatusMessage('Pairing code expired. Please request a new one.', 'error');
            }
        }

        function restartBot() {
            if (confirm('Are you sure you want to restart the bot?')) {
                showStatusMessage('Restarting bot...', 'info');
                fetch('/process?send=reset')
                    .then(response => response.json())
                    .then(data => {
                        if (data.status === 'Send') {
                            showStatusMessage('Bot restart command sent successfully', 'success');
                            setTimeout(() => {
                                location.reload();
                            }, 3000);
                        }
                    })
                    .catch(error => {
                        showStatusMessage('Error restarting bot', 'error');
                    });
            }
        }

        function checkConnection() {
            updateConnectionStatus('connecting');
            updateUptime();
            showStatusMessage('Checking connection status...', 'info');
        }

        // Auto-check connection status setiap 10 detik
        setInterval(updateUptime, 10000);

        // Initial load
        updateUptime();

        // Jika ada nomor bot di global variable, tampilkan di form
        <% if (typeof number_bot !== 'undefined' && number_bot) { %>
            document.getElementById('phoneNumber').value = '<%= number_bot %>';
        <% } %>
    </script>
</body>
</html>
